@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView Context="ctx">
                <Authorized>
                    Inloggad som: @ctx.User.Identity?.Name
                </Authorized>
                <NotAuthorized>
                    <span>Ej inloggad</span>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
